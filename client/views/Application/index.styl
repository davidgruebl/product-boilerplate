@require 'nib'
@require 'jeet'

bgColor = #ecf0f1
txtColor = #000

*, *:before, *:after
  box-sizing: border-box

html, body
  height: 100%
  width: 100%
  margin: 0
  padding: 0
  color: txtColor
  font-family: 'HelveticaNeue-Light', 'Helvetica Neue Light', 'Helvetica Neue', Helvetica, Arial, 'Lucida Grande', sans-serif
  font-weight: 300
  font-smoothing: antialiased
  text-rendering: optimizeLegibility

body
  background: bgColor
