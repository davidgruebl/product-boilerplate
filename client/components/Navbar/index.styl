@require 'nib'
@require 'jeet'

navColor = #27ae60
textColor = #ecf0f1
activeTextColor = #ecf0f1
activeNavColor = #2ecc71
navHeight = 55px

.navbar-component
  col(1/1)
  z-index: 2
  position: relative
  overflow: hidden
  height: navHeight
  background-color: navColor
  color: textColor

  .links
    center(max-width: 700px)

    a
      span(1/4)
      height: 100%
      font-size: 18px
      text-align: center
      line-height: navHeight

      outline: none
      color: inherit
      text-decoration: none

    a.active
      color: activeTextColor
      background-color: activeNavColor